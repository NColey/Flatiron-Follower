<%= form_for(@student) do |f| %>

  <div class="field">
    <p>Welcome <%= @student.name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :size => "40", class: 'form-control' %>
  </div>

   <br>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <br>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %><br>
  </div>

  <br>

  <div class="field">
    <%= f.label :twitter_handle %>
    <%= f.text_field :twitter_handle, class: 'form-control' %><br>
  </div>  

  <br>

  <div class="field">
    <%= f.label :github_handle %>
    <%= f.text_field :github_handle, class: 'form-control' %><br>
  </div>  

  <br>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>