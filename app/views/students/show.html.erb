<h2><%= current_student.name %>'s Dashboard</h3>
<br>

<div class="row">
  <div class="col-md-4">
    <h3>Your Social Summary</h3>

    <table class="table table-striped table-hover">
      <tbody>
        <tr>
          <td><i class="fa fa-envelope-o"></i></td>
          <td><%= current_student.email %></td>
        </tr>
        <tr>
          <td><i class="fa fa-twitter"></i></td>
          <td><%= current_student.twitter_handle %></td>
        </tr>
        <tr>
          <td><i class="fa fa-github"></i></td>
          <td><%= current_student.github_handle %></td>
        </tr>
        <tr>
          <td><i class="fa fa-linkedin-square"></i></i></td>
          <td><%= link_to "LinkedIn Profile", current_student.linkedin_url, target: "_blank" %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "Edit Your Profile", edit_student_path(current_student) %>
      


  </div>

  <div class="col-md-8">

    <h3>Connect Your Accounts</h4>
    <div class="row">
      <div class="col-md-6">

        <% if logged_in_with_github? %>
          <div class="follow-github">

          <%= link_to(logout_github_path, {class: "btn btn-block btn-social btn-github", id: "github-connect"}) do %>
             <span class="fa fa-github"></span>Log out of Github
          <% end %>
          <br>
          <p>Your Github account is now connected!</p>

          </div>
        <% else %>   
          <%= link_to(login_github_path, {class: "btn btn-block btn-social btn-github", id: "github-connect"}) do %>
             <span class="fa fa-github"></span>Log in with Github
          <% end %>

        <% end %>

      </div>

      <div class="col-md-6">

      <% if logged_in_with_twitter? %>
        <div class="follow-twitter">

          <%= link_to(twitter_log_out_path, {class: "btn btn-block btn-social btn-twitter", id: "twitter-connect"}) do %>
            <span class="fa fa-twitter"></span> Log out of Twitter
          <% end %>
          <br>
          <p>Your Twitter account is now connected!</p>
        </div>

      <% else %>
          <%= link_to(twitter_login_path, {class: "btn btn-block btn-social btn-twitter", id: "twitter-connect"}) do %>
            <span class="fa fa-twitter"></span> Log in with Twitter
          <% end %>      
      <% end %>

    </div>
  </div>
</div>
</div>